t = int(input()) x=t*2+(t-1)*2-1 y=1 for i in range(1,t+1): dashes=''.join(['-']*(((x-y)//2))) str="" for j in range(t,t-i,-1): str+=chr(96+j)+"-" for j in range(t-i+1,t): str+=chr(97+j)+"-" y+=4 print(dashes+str[:-1]+dashes) y-=8 for i in range(t-1,0,-1): str="" dashes=''.join(['-']*(((x-y)//2))) for j in range(t,t-i,-1): str+=chr(96+j)+"-" for j in range(t-i+1,t): str+=chr(97+j)+"-" y-=4 print(dashes+str[:-1]+dashes)
